    <div class="row">
        <div class="col-sm-12 text-right">
            <div class="btn-group" role="group">
                <a href="javascript://" onclick="window.history.back()" class="btn btn-default"><i class="fa fa-close"></i> Cancel / Back</a>
                <button type="submit" id="submit" class="btn btn-success"><i class="fa fa-check"></i> Submit</button>
            </div>
        </div>
    </div>
</form>


@section scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            //-- Read Only Mode Trigger -//
            @*if ('@ViewData["IsView"]' != '') {
                $("input").attr("readonly", true);
                $("#IsActive").attr("disabled", true);
                $("#submit").hide();
            }*@

            //txt_Credit leave event
            $(document).on('focusout', '.unsortedCash', function (e) {
                e.preventDefault();
                accountGridRowIndex = $(this).closest('td').attr("data-id");
                const unsortedValue = $('#unsortedCash' + accountGridRowIndex).val();
                const denomVal = $('#DenomTitle' + accountGridRowIndex).val();
                //console.log(parseInt(denomVal));
                //console.log(parseInt(unsortedValue));
                const totalVal = parseInt(unsortedValue) * parseInt(denomVal);
                $('#unsortedCashValue' + accountGridRowIndex).val(totalVal == NaN ? '0' : totalVal);

                //console.log(unsortedValue);

                //GetTotal();
            });

            $(".select2").select2();

            $('#ProjectBranchId').change(function (e) {
                e.preventDefault();
                const id = $('#ProjectBranchId option:selected').attr('value');
                const date = $('#AnnexureIIIDate').val();
                //console.log(id + ' ' + date);
                //var dataItem = $('#inp-sku').val();
                if (id != "") {
                    $.get('/CPC/AnnexureI/GetAnnexureI?Id=' + id + '&date=' + date, function (response) {
                        if (response != null) {
                            //console.log(response);
                            $('#ShipmentReceiptNumber').val(response.ShipmentReciptNo);
                            $('#ShipmentSealNumber').val(response.SealNo);
                            $('#AnnexureId').val(response.Id);

                            for (var i = 0; i < response.details.length; i++) {
                                if (i == 0) {
                                    $('#DenomOneId').val(response.details[0].DenominationId);
                                    $('#DenomTitle0').val(response.details[0].DenominationTitle);
                                }
                                if (i == 1) {
                                    $('#DenomTwoId').val(response.details[1].DenominationId);
                                    $('#DenomTitle1').val(response.details[1].DenominationTitle);
                                }
                                if (i == 2) {
                                    $('#DenomThreeId').val(response.details[2].DenominationId);
                                    $('#DenomTitle2').val(response.details[2].DenominationTitle);
                                }
                            }

                            //console.log(response);

                            $('input#UnsortedCashCollected0').focus();
                        }
                    });
                } else {
                    $('form#add-item input').val('');
                }
            });

        });

        function GetTotal() {
            //debugger;
            debit = 0;
            credit = 0;
            //console.log(accountGridRowIndex);

            for (var i = 1; i < accountGridRowIndex; i++) {
                //console.log("For LOOP, i= " + i);
                if ($("#txt_AccountCode" + i).val() != "" && $("#txt_AccountName" + i).val() != "") {

                    debit += parseFloat($("#txt_Debit" + i).val());
                    credit += parseFloat($("#txt_Credit" + i).val());

                    //console.log("D :" + debit + "C :" + credit);
                }
                $("#txt_difference").val(parseFloat(debit - credit).toFixed(2));
                $("#TotalDebit").val(parseFloat(debit).toFixed(2));
                $("#TotalCredit").val(parseFloat(credit).toFixed(2));
            }
        }
    </script>
}

